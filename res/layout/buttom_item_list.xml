<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_fav_duanzi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_digg_normal"
                android:gravity="center_vertical"
                android:text="345"
                android:textColor="#8B8989" />

            <TextView
                android:id="@+id/tv_oneplus_fav_item_duanzi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="+1"
                android:textColor="#CD0000"
                android:visibility="invisible" />
        </FrameLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#BFBFBF" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_bury_duanzi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_bury_normal"
                android:gravity="center_vertical"
                android:text="345"
                android:textColor="#8B8989" />

            <TextView
                android:id="@+id/tv_oneplus_bury_item_duanzi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="+1"
                android:textColor="#CD0000"
                android:visibility="invisible" />
        </FrameLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#BFBFBF" />

        <TextView
            android:id="@+id/tv_comment_duanzi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_comment_normal"
            android:gravity="center_vertical"
            android:text="345"
            android:textColor="#8B8989" />

        
    </LinearLayout>

</LinearLayout>
