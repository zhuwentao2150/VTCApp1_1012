<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
    
    <!-- 导航栏 -->
    <com.vtcapp.widget.MenuTop
        android:id="@+id/schooladd_menutop"
        android:layout_width="fill_parent"
        android:layout_height="50dp" >
    </com.vtcapp.widget.MenuTop>
    
    <TextView 
        android:id="@+id/tv_schooladd_name"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="学校名称"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#000000"
        />
    
    
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="1"
    	android:padding="10dp"
    	android:orientation="vertical"
        >
        
	    <EditText 
	        android:id="@+id/add_edt_name"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:hint="姓名"
	        />
	    <EditText
	        android:id="@+id/add_edt_qq"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:hint="qq"
	        />
	    <EditText
	        android:id="@+id/add_edt_phone"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:hint="电话号码"
	        />
	    <EditText
	        android:id="@+id/add_edt_email"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:hint="Email"
	        />
	    
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
    	android:layout_height="130dp"
    	android:paddingLeft="20dp"
    	android:paddingRight="20dp"
    	android:orientation="vertical"
        >
        <Button 
	        android:layout_marginTop="10dp"
	        android:id="@+id/add_btn_qued"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="确	定"
	        />
	    <Button 
	        android:id="@+id/add_btn_quxiao"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="重	置"
	        />
    </LinearLayout>

</LinearLayout>
